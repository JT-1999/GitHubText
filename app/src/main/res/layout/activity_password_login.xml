<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PasswordLogin">


    <TextView
        android:id="@+id/passwordlogin_tv_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码登录"
        android:textSize="100px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
         android:id="@+id/passwordlogin_et_phonenumber"
         android:layout_width="300dp"
         android:layout_height="50dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="@id/passwordlogin_tv_mima"
         android:layout_marginTop="100dp"
         android:hint="请输入手机号"
         android:textColor="#B4B4B4"
        />
    <EditText
        android:id="@+id/passwordlogin_et_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/passwordlogin_et_phonenumber"
        android:layout_marginTop="70dp"
        android:hint="输入密码"
        android:textColor="#B4B4B4"
        />
    <Button
        android:id="@+id/passwordlogin_bt_gettoregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去注册"
        android:textColor="#B4B4B4"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/passwordlogin_et_password"
        app:layout_constraintRight_toRightOf="@id/passwordlogin_et_password"
        style="?android:attr/borderlessButtonStyle"
        />
    <Button
        android:id="@+id/passwordlogin_bt_gettologin"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="64px"
        android:background="@drawable/button_circle_shape"
        android:text="登录"
        app:layout_constraintTop_toTopOf="@id/passwordlogin_bt_gettoregister"
        android:layout_marginTop="60dp"
        android:textColor="@color/grey"
        style="?android:attr/borderlessButtonStyle"
        />



</androidx.constraintlayout.widget.ConstraintLayout>