<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <androidx.appcompat.widget.SearchView
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintWidth_percent="0.6"
        android:id="@+id/search_view2"
        app:queryHint="搜索活动"
        android:background="@drawable/search_shape"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:actionViewClass="android.support.v7.widget.SearchView"
        />
    <Button
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/home"
        app:layout_constraintTop_toTopOf="@id/search_view2"
        app:layout_constraintBottom_toBottomOf="@id/search_view2"
        app:layout_constraintLeft_toRightOf="@id/search_view2"
        android:layout_marginLeft="60dp"
        android:background="@drawable/edit_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        />
    <Button
        android:id="@+id/bt_canjia"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/search_view2"
        app:layout_constraintLeft_toLeftOf="@id/search_view2"
        android:background="@drawable/button_circle_shape_black"
        android:textColor="@color/white"
        android:text="我参加的"
        />
    <Button
        android:id="@+id/bt_shoucang"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/bt_canjia"
        app:layout_constraintLeft_toRightOf="@id/bt_canjia"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_circle_shape_white"
        android:textColor="@color/grey"
        android:text="我的收藏"
        />
    <ImageView
        android:id="@+id/activity"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/bt_canjia"
        app:layout_constraintLeft_toLeftOf="@id/bt_canjia"
        android:src="@drawable/iphone"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity"
        app:layout_constraintLeft_toLeftOf="@id/bt_canjia"
        app:layout_constraintRight_toRightOf="@id/bt_canjia"
        android:layout_marginTop="10dp"
        android:text="安卓期末答辩"
        />


</androidx.constraintlayout.widget.ConstraintLayout>