<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailedActivity">

    <Button
        android:id="@+id/detailed_return"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/left_arrow"
        />
    <ImageView
        android:id="@+id/users_imageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/dbl"
        app:layout_constraintTop_toBottomOf="@id/detailed_return"
        app:layout_constraintLeft_toLeftOf="@id/photo"
        />
    <TextView
        android:id="@+id/tv_users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/users_imageView"
        app:layout_constraintLeft_toRightOf="@id/users_imageView"
        android:layout_marginLeft="30dp"
        android:hint="我是一个账号"
        />
    <Button
        android:id="@+id/bt_guanzhu"
        android:layout_width="75dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/users_imageView"
        app:layout_constraintBottom_toBottomOf="@id/users_imageView"
        android:background="@drawable/button_circle_shape"
        android:text="关注"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/photo"
        />
    <ImageView
        android:id="@+id/photo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/users_imageView"
        android:layout_marginTop="30dp"
        android:src="@drawable/sh"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="@id/photo"
        app:layout_constraintRight_toRightOf="@id/photo"
        app:layout_constraintTop_toBottomOf="@id/photo"
        android:layout_marginTop="30dp"
        tools:text="@string/activity"
        />
    <Button
        android:id="@+id/bt_shoucang"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/shoucang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/photo"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="30dp"
        style="?android:attr/borderlessButtonStyle"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_shoucang"
        app:layout_constraintLeft_toLeftOf="@id/bt_shoucang"
        app:layout_constraintRight_toRightOf="@id/bt_shoucang"
        android:text="收藏"
        android:layout_marginTop="10dp"

        />
    <Button
        android:id="@+id/bt_canjia"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/shoucang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/bt_guanzhu"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="30dp"
        style="?android:attr/borderlessButtonStyle"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_canjia"
        app:layout_constraintLeft_toLeftOf="@id/bt_canjia"
        app:layout_constraintRight_toRightOf="@id/bt_canjia"
        android:text="参加"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>